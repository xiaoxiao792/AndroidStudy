<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ac_login_main_tv">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginStart">45dp</item>
    </style>
    <style name="ac_login_main_et">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
    </style>

    <style name="ac_register_main_tv">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>
    <style name="ac_register_main_et">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="ac_up_pwd_main_tv">
