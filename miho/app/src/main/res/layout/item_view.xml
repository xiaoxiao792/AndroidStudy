<?xml version="1.0" encoding="utf-8"?>
<com.shaobing.miho.Views.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    app:content_id="@+id/ll_layout"
    app:right_id="@+id/ll_right_menu"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/shape_item_border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:background="@mipmap/icon01_cat" />

        <TextView
            android:id="@+id/tv_item_plan_name"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:text="做作业"
            android:textStyle="normal"
            android:textColor="@color/myBlack"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_chock_in_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0次"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/myBlack"
                android:layout_marginTop="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="累计打卡"
                android:textSize="12sp"
                android:textColor="@color/myGray"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_finish"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@color/myGray"
            android:gravity="center"
            android:text="结束"
            android:textColor="@color/myWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_edit"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@color/myYellow"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/myWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_delete"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@color/myRed"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/myWhite"
            android:textSize="16sp" />

    </LinearLayout>
</com.shaobing.miho.Views.SwipeMenuView>