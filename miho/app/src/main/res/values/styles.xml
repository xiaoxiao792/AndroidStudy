<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ac_login-->
    <style name="thm_login_tip">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>
    <style name="thm_login_title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>
    <style name="thm_tv_user_name">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="thm_tv_register">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#4a5d86</item>
    </style>
    <style name="thm_tv_retrieve">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#4a5d86</item>
    </style>

    <!--ac_register-->
    <style name="thm_register_title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>
    <style name="thm_register_tip">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>

    <!--ac_main-->
    <style name="thm_main_fbl_bg">
        <item name="android:background">@drawable/shape_gradient</item>
        <item name="android:textColor">@color/myWhite</item>
    </style>

    <style name="AnimScale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

</resources>
