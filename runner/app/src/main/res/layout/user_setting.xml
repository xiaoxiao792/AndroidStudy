<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_add_plan"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置个人数据"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_user_weight"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:hint="体重"
            android:gravity="center"
            android:background="@drawable/shape_et_name"/>

        <EditText
            android:id="@+id/et_user_height"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:hint="身高"
            android:gravity="center"
            android:background="@drawable/shape_et_name"/>

        <Button
            android:id="@+id/btn_user_setting_confirm"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:text="确  定"
            android:textSize="16sp"
            android:textColor="@color/myWhite"
            android:background="@drawable/shape_btn_add"
            style="?android:attr/borderlessButtonStyle" />

    </RelativeLayout>

</RelativeLayout>