<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@mipmap/cat"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runner"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textColor="#000000"
                android:typeface="serif"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSms"
            android:layout_height="45dp"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="用户注册" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#000000"
            android:text="国家/地区"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/ivSelectCountry"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginTop="9dp"
            android:src="@drawable/xiangyou"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <!--线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shape_under_line">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            android:text="手   机   号"
            android:textSize="19sp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:maxLength="11"
            android:background="@null"
            android:inputType="phone"
            android:textColor="#000000" />
    </LinearLayout>

    <!--线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shape_under_line">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            android:text="密          码"
            android:textSize="19sp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="#000000" />
    </LinearLayout>

    <!--线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shape_under_line">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            tools:ignore="NestedWeights"
            android:text="验   证   码"
            android:textSize="19sp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etCode"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="6"
            android:inputType="number"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/smssdk_get_code"
            android:textColor="@color/smssdk_getcode_textcolor_selector"
            android:textSize="14dp"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>

    <!--线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/shape_under_line">
    </LinearLayout>

    <TextView
        android:id="@+id/tvVerify"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_btn_login"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/smssdk_verify_textcolor_selector"
        android:textSize="14sp" />
</LinearLayout>