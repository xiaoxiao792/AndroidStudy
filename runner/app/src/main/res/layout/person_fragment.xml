<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/person_frag_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/person_frag_top"
        android:layout_marginTop="42dp">

        <com.shehuan.niv.NiceImageView
            android:id="@+id/person_frag_user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/cat"
            app:border_color="#cdcdcd"
            app:border_width="1dp"
            app:inner_border_width="1dp"
            app:is_circle="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/person_frag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:background="@mipmap/xingxing" />
                <TextView
                    android:id="@+id/person_frag_standard_num"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="达标0天" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/person_frag_user_setting"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="63dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:background="@mipmap/xiangyou128" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_frag_top"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_tuijian"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="12dp"
            android:background="@mipmap/paobu111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="总运动："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/person_frag_step_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="0"
            android:textSize="30sp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:text="步"
            android:textSize="18sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_frag_top"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="196dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_tuijian"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="11dp"
            android:background="@mipmap/jianshenke" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="总锻炼："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pereson_frag_exercise_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="0"
            android:textSize="30sp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:text="分钟"
            android:textSize="18sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/person_frag_top"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="15dp"
        android:text="我的课程"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/person_frag_top"
        android:layout_marginTop="312dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_tuijian"
        android:elevation="1dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/my_course_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>